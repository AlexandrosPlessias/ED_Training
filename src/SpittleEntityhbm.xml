<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entities.SpittleEntity" table="spittle" schema="spittr_db">
        <id name="idSpittle">
            <column name="idSpittle" sql-type="int"/>
        </id>
        <property name="message">
            <column name="message" sql-type="varchar(180)" length="180"/>
        </property>
        <property name="time">
            <column name="time" sql-type="datetime"/>
        </property>
        <property name="latitude">
            <column name="latitude" sql-type="double" precision="-1"/>
        </property>
        <property name="longitude">
            <column name="longitude" sql-type="double" precision="-1"/>
        </property>
    </class>
</hibernate-mapping>