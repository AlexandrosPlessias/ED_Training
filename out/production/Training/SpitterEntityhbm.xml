<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entities.SpitterEntity" table="spitter" schema="spittr_db">
        <id name="idSpitter">
            <column name="idSpitter" sql-type="int"/>
        </id>
        <property name="username">
            <column name="username" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="email">
            <column name="email" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="firstName">
            <column name="firstName" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="lastName">
            <column name="lastName" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="description">
            <column name="description" sql-type="varchar(100)" length="100"/>
        </property>
    </class>
</hibernate-mapping>